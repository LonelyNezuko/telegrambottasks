    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.20",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/node-telegram-bot-api": "^0.64.2",
    "nodemon": "^3.1.0",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  }
